<% layout('layouts/boilerplate') %> 
    <div class="row">
        <h1 class="text-center">Edit car</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/cars/<%=car._id%>?_method=put" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="car[title]" id="title" value="<%=car.title%>" required>
                    <!-- <div class="valid-feedback">Looks Good!</div> -->
                </div>
                <div class="mb-3">
                    <label class="form-label" for="company">company</label>
                    <input class="form-control" type="text" name="car[company]" id="company" value="<%=car.company%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Car Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" id="price" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="car[price]" value="<%=car.price%>" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="car[description]" id="description" required><%=car.description%></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload more Image(s)</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div>
                <div class="mb-3">
                    <% car.images.forEach(function(img,i) {%>
                        <img src="<%=img.url%>" alt="" class="img-thumbnail">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            <label class="form-check-label" for="image-<%=i%>">Delete</label>
                        </div>
                    <% }) %> 
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update car</button>
                </div>
            </form>
            <a href="/cars/<%=car._id%> ">Back to car</a>
        </div>
    </div>